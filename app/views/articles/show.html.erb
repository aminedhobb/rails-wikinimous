<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="article-title">
      <h1><%= @article.title %>
      </h1>
      <%= link_to "Delete", article_path(@article),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
      <%= link_to "Edit", edit_article_path(@article) %>

    </div>
    <p><%= @article.content %></p>
  </div>
</div>
